                        android:text="23h03"/>
                    <TextView
                        android:id="@+id/paramtextest12"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="4h28"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/paratextestetantdeau"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="4"
                    >
                    <TextView
                        android:id="@+id/paramtextest13"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="(10h57"/>
                    <TextView
                        android:id="@+id/paramtextest14"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="17h59)"/>
                    <TextView
                        android:id="@+id/paramtextest15"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="(23h09"/>
                    <TextView
                        android:id="@+id/paramtextest16"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="6h24)"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"

                    android:weightSum="4"
                    >
                    <TextView
                        android:id="@+id/paramtextest17"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="7.6"/>
                    <TextView
                        android:id="@+id/paramtextest18"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="3.3"/>
                    <TextView
                        android:id="@+id/paramtextest19"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="7.3"/>
                    <TextView
                        android:id="@+id/paramtextest20"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="3.75"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:weightSum="5"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/bParamReset"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:layout_margin="5dp"
                android:textColor="@android:color/white"
                android:background="@drawable/button_background"
                android:text="RESET"/>

        </LinearLayout>


    </LinearLayout>
    <TextView
        android:id="@+id/parametreTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PARAMÈTRE"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textColor="@color/colorTitre"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>