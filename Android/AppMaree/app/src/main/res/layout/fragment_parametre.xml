                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="13h14"/>
                    <TextView
                        android:id="@+id/paramtextest8"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="19h45"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:weightSum="4"
                    >
                    <TextView
                        android:id="@+id/paramtextest9"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="10h51"/>
                    <TextView
                        android:id="@+id/paramtextest10"
