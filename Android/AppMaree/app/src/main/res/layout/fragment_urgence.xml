<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
    <TextView
        android:id="@+id/latitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Latitude:"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/longitude"/>

    <TextView
        android:id="@+id/longitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Longitude:"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/latitude" />

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/urgence1"/>

        <Button
            android:id="@+id/btn_urgence1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bouton_urgence1"
            android:layout_gravity="center"/>
        <TextView
            android:id="@+id/textUrgence1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="@string/text_urgence1"/>

        <View
            android:id="@+id/divider2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/urgence2"/>

        <Button
            android:id="@+id/btn_urgence2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bouton_urgence2"
            android:layout_gravity="center"/>
        <TextView
            android:id="@+id/textUrgence2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="@string/text_urgence2"/>
    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>